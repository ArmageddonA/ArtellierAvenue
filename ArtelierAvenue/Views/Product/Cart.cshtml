@{
    ViewBag.Title = "Cart";
}

<h2 class="page-heading">Your Cart</h2>
<hr />

<div class="container">
    <div class="cart-item">
        <img class="cart-item-section" src="https://via.placeholder.com/300" alt="item name" />

        <div class="cart-item-information cart-item-section">
            <a class="cart-item-item-link cart-item-name">Item Name</a>
            <br />
            <a class="cart-item-item-link cart-item-brand">Brand Name</a>
            <br />
            <span class="cart-item-price row-no-gutters alt-font">R 500.00 ea</span>
            <br />
            <span class="cart-item-quantity">QTY: <span class="alt-colour">1</span></span>
            <br />
            <span class="cart-item-total-price alt-font">Total: <span class="alt-colour">R 500.00</span> </span>
        </div>
        <div class="cart-item-btn-container cart-item-section">
            <div class="custom-btn option-btn"><span class="glyphicon glyphicon-remove"></span></div>
            <div class="custom-btn option-btn"><span class="glyphicon glyphicon-heart"></span></div>
        </div>
    </div>
    <hr />
    <div class="cart-item">
        <img class="cart-item-section" src="https://via.placeholder.com/300" alt="item name" />

        <div class="cart-item-information cart-item-section">
            <a class="cart-item-item-link cart-item-name">Item Name</a>
            <br />
            <a class="cart-item-item-link cart-item-brand">Brand Name</a>
            <br />
            <span class="cart-item-price row-no-gutters alt-font">R 500.00 ea</span>
            <br />
            <span class="cart-item-quantity">QTY: <span class="alt-colour">1</span></span>
            <br />
            <span class="cart-item-total-price alt-font">Total: <span class="alt-colour">R 500.00</span> </span>
        </div>
        <div class="cart-item-btn-container cart-item-section">
            <div class="custom-btn option-btn"><span class="glyphicon glyphicon-remove"></span></div>
            <div class="custom-btn option-btn"><span class="glyphicon glyphicon-heart"></span></div>
        </div>
    </div>
    <hr />
</div>